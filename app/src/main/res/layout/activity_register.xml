<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/register"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:fontFamily="@font/bebasneueregular"
        />

    <EditText
        android:id="@+id/fullname"
        android:layout_below="@id/register"
        android:hint="Fullname"
        android:drawableLeft="@drawable/ic_baseline_person"
        android:drawablePadding="20dp"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:fontFamily="@font/bebasneueregular"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/email"
        android:layout_below="@id/fullname"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_baseline_email"
        android:drawablePadding="20dp"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_baseline_password"
        android:drawablePadding="20dp"
        android:fontFamily="@font/bebasneueregular"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/passwordconf"
        android:layout_below="@id/password"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_baseline_password"
        android:drawablePadding="20dp"
        android:fontFamily="@font/bebasneueregular"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerbtn"
        android:layout_below="@id/passwordconf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/bebasneueregular"
        android:text="Register"
        android:backgroundTint="@color/black"/>
    
    <TextView
        android:id="@+id/login"
        android:layout_below="@+id/registerbtn"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/bebasneueregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Have Account? Sing in"/>

</RelativeLayout>